+        def training_step(self, batch, batch_idx, hiddens):
+            # hiddens are the hiddens from the previous truncated backprop step
+            out, hiddens = self.lstm(data, hiddens)
+
+            return {
+                "loss": ...,
+                "hiddens": hiddens  # remember to detach() this
+            }
